.SellContainer
  %header.SellHeader
    %h1
      = link_to image_tag("material/logo/logo.png", alt: "サンプル画像"), "/"
  %main.SellNewContainer
    = form_with model: nil, html: {class: "RegistrationForm"}, local: true do |f|
      .FormItemPanel
        %label
          出品画像
        %span.FormItemPanel__Require
          必須
        %p.FormItemPanel__InnerText
          写真を1枚アップロードしてください
        .FormItemPanel__Image
          .FormItemPanel__Imagepartition
          .FormItemPanel__Imagebox
            = f.label :item_image, class: "FormItemPanel__Inputimage" do
              = f.file_field :item_image, class: 'FormItemPanel__Hidden', required: true
              .FormItemPanel__Cen
                = icon("fa","camera", class:"FormItemPanel__Icon")
                %p.FormItemPanel__Image-innerText
                  クリックしてファイルをアップロード
      %hr.FormItemPanel__Separator
      .FormItemPanel
        .FormItemPanel__Contentbox
          %label{for: "item_name"}
            商品名
          %span.FormItemPanel__Require
            必須
          = f.text_field :name, id: "item_name", placeholder: "40文字まで", required: true
        .FormItemPanel__Contentbox.FormItemPanel__Notfirst
          %label{for: "item_introduction"}
            商品の説明
          %span.FormItemPanel__Require
            必須
          = f.text_area :explanation, id: "item_introduction", placeholder: "商品の説明(1,000文字以内)\n(色、素材、重さ、定価、注意点など)\n\n例) 2010年頃に１万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。", rows: "7", required: true
          .FormItemPanel__Strcount
            %span
              0
              \/1000

      %hr.FormItemPanel__Separator
      .FormItemPanel
        %p.FormItemPanel__Sub
          商品の詳細
        .FormItemPanel__Contentbox.FormItemPanel__Notfirst
          %label{for: "categories"}
            カテゴリー名
          %span.FormItemPanel__Require
            必須
          = f.select :categories, [['レディース', "women"], ['メンズ', "men"], ['ベビー・キッズ', "baby_kid"], ['スマホ・タブレット', "phone_tablet"], ['ゲーム', "game"], ['おもちゃ・ホビーグッズ', "toy"], ['本・メディア', "book_media"], ['チケット', "ticket"], ['スポーツ・レジャー', "sport_leisure"]], { include_blank: '--選択してください--'}, { id: "categories", required: true}
        .FormItemPanel__Contentbox.FormItemPanel__Notfirst
          %label{for: "status"}
            ブランド
          %span.FormItemPanel__Any
            任意
          = f.text_field :trading_status, id: "status",placeholder: "例)HERMES"
        .FormItemPanel__Contentbox.FormItemPanel__Notfirst
          %label{for: "condition"}
            商品の状態
          %span.FormItemPanel__Require
            必須
          = f.collection_select(:condition_id, Condition.all, :id, :name, { include_blank: "--選択してください--" }, { id: "condition", required: true})
          -# = f.select :item_condition, [['新品・未使用', "new"], ['未使用に近い', "nearly_new"], ['目立った傷や汚れなし', "no_damage"], ['やや傷や汚れあり', "little_damage"], ['傷や汚れあり', "damage"], ['全体的に状態が悪い', "damage"]], {include_blank: '--選択してください--'}, { id: "condition", required: true}
      %hr.FormItemPanel__Separator
      .FormItemPanel
        %p.FormItemPanel__Sub
          配送について
          = link_to "#" do
            = icon("far","question-circle")
        .FormItemPanel__Contentbox.FormItemPanel__Notfirst
          %label{for: "shipping"}
            配送料の負担
          %span.FormItemPanel__Require
            必須
          = f.collection_select(:shipping_fee_payer_id, ShippingFeePayer.all, :id, :name, { include_blank: "--選択してください--" }, { id: "shipping", required: true})
          -# = f.select :shipping_fee_payer, [['送料込み(出品者負担)', "seller"] ,['着払い(購入者負担)', "buyer"]], { include_blank: '--選択してください--'}, { id: "shipping", class: "FormItemPanel__Shipping", required: true}
        .FormItemPanel__Contentbox.FormItemPanel__Notfirst
          %label{for: "prefecture"}
            発送元の地域
          %span.FormItemPanel__Require
            必須
          = f.collection_select(:item_prefecture_id, Prefecture.all, :id, :name, { include_blank: "--選択してください--" }, { id: "prefecture", required: "required"})
          -# = f.select :prefecture, [['北海道', "1"] ,['青森県', "2"], ['岩手県', "3"], ['宮城県', "4"], ['秋田県', "5"], ['山形県', "6"], ['福島県', "7"], ['茨城県', "8"], ['栃木県', "9"], ['群馬県', "10"], ['埼玉県', "11"], ['千葉県', "12"], ['東京都', "13"], ['神奈川県', "14"], ['新潟県', "15"], ['富山県', "16"], ['石川県', "17"], ['福井県', "18"], ['山梨県', "19"], ['長野県', "20"], ['岐阜県', "21"], ['静岡県', "22"], ['愛知県', "23"], ['三重県', "24"], ['滋賀県', "25"], ['京都府', "26"], ['大阪府', "27"], ['兵庫県', "28"], ['奈良県', "29"], ['和歌山県', "30"], ['鳥取県', "31"], ['島根県', "32"], ['岡山県', "33"], ['広島県', "34"], ['山口県', "35"], ['徳島県', "36"], ['香川県', "37"], ['愛媛県', "38"], ['高知県', "39"], ['福岡県', "40"], ['佐賀県', "41"], ['長崎県', "42"], ['熊本県', "43"], ['大分県', "44"], ['宮崎県', "45"], ['鹿児島県', "46"], ['沖縄県', "47"]], { include_blank: '--選択してください--'}, { id: "prefecture", required: true}
        .FormItemPanel__Contentbox.FormItemPanel__Notfirst
          %label{for: "preparation"}
            発送までの日数
          %span.FormItemPanel__Require
            必須
          = f.collection_select(:preparation_day_id, PreparationDay.all, :id, :name, { include_blank: "--選択してください--" }, { id: "preparation", required: true})
          -# = f.select :preparation_day, [['1〜2日で発送', "1_2days"], ['2〜3日で発送', "2_3days"], ['4〜7日で発送', "4_7days"]], { include_blank: '--選択してください--'}, { id: "delivary_days", id: "preparation_day", required: true}
      %hr.FormItemPanel__Separator
      .FormItemPanel
        %p.FormItemPanel__Sub
          価格(¥300〜9,999,999)
          = link_to "#" do
            = icon("far","question-circle")
        .FormItemPanel__Sellprice
          .FormItemPanel__Sellbox
            %label{for: "Price"}
              販売価格
            %span.FormItemPanel__Require
              必須
          %span.FormItemPanel__Doller
            ¥
          = f.number_field :price, id: "Price",class: "FormItemPanel__Price", placeholder: "0", required: true
        .FormItemPanel__Sellprice
          %p.FormItemPanel__Sellbox
            販売手数料(10%)
          %span.FormItemPanel__Feevalue
            ー
        %hr.FormItemPanel__Separator
        .FormItemPanel__Sellprice
          %p.FormItemPanel__Sellbox
            販売利益
          %span.FormItemPanel__Totalvalue
            ー
        .FormItemPanel__Mainfooter
          .FormItemPanel__Btnbox
            = f.submit "出品する", class: "FormItemPanel__Btn FormItemPanel__Submit FormItemPanel__Nbtn"
            = link_to "下書きに保存", "/", class: "FormItemPanel__Btn FormItemPanel__Draft FormItemPanel__Nbtn"
            = link_to "戻る", "/", class: "FormItemPanel__Nbtn"
        .FormItemPanel__Mainfooter
          %p
            禁止されている行為および出品物を必ずご確認ください。偽ブランド品や盗品物などの販売は犯罪であり、法律により処罰される可能性があります。また、出品をもちまして 加盟店規約に同意したことになります。
  %footer.SellFooter
    %nav
      %ul
        %li
          = link_to 'プライバシーポリシー', "#"
        %li
          = link_to 'フリマ利用規約', "#"
        %li
          = link_to '特定商取引に関する表記', "#"
    = link_to image_tag("material/logo/logo-white.png", alt: "ロゴ画像"), "/"
    %p
      %small
        ©FURIMA