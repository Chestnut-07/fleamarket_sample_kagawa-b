%header.TopMenu
  .TopContainer
    .TopContainer__topBar
      %h1.TopContainer__logo
        = link_to root_path do
          = image_tag 'material/logo/logo.png', class: 'TopLogo'
        %span<>
      .SearchForm
        = form_with url:'#', method: :get, local: true do |f|
          = f.text_field :name, class: "SearchForm__form", placeholder: "キーワードから探す"
          = f.label :name, class: "SearchForm__label" do
            = image_tag 'material/icon/icon-search 1.png', class: 'SearchForm__icon'
            = f.submit class: "SearchForm__btn"
    .TopContainer__ListBar
      %ul.LeftList
        %li.LeftList__Item
      %ul.RightItems
        %li.RightList__Item
%main.UserShow
  .BackBoard
    .SideBar
      %nav.SideNavList
    .MyPage
.LinkToDlsite
%footer.BottomMenu